<?xml version="1.0"?>

<launch>
    <!-- use sim time-->
    <param name="use_sim_time" value="true" />

    <arg name="node_start_delay" default="2.0" />

    <arg name="dataset_name" default="20230215_lab_short" />
    <arg name="dataset_duration" default="45.0" />

    <node pkg="rosbag" type="play" name="player" required="true"
        launch-prefix="zsh -c 'sleep $(arg node_start_delay); $0 $@' "
        args="--clock --hz=2000 -u $(arg dataset_duration) -r 0.5 $(find vilo)/../../bags/230517_sqh_mocap/$(arg dataset_name).bag" />


    <!-- cerberus2 config -->
    <arg name="vilo_config_file"
        value="/tmp/temp_run_cerberus.yaml" />


    <node name="cerberus_main" pkg="vilo"
        args="$(arg vilo_config_file)"
        type="vilo"
        output="screen" />
</launch>